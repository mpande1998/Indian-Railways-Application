<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/train_photo"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_train" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/train_photo"
            android:textSize="16sp"
            android:textColor="#707070"
            android:padding="2dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#707070"
            android:padding="2dp"
            android:layout_toRightOf="@+id/name"/>

        <TextView
            android:id="@+id/scharr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/train_photo"
            android:layout_below="@+id/name"/>

        <TextView
            android:id="@+id/delayarr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/scharr"
            android:layout_toRightOf="@+id/train_photo"/>

        <TextView
            android:id="@+id/schdep"
            android:layout_width="wrap_content"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/scharr"
            android:textSize="12sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/delaydep"
            android:layout_toRightOf="@+id/delayarr"
            android:layout_below="@+id/schdep"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CECBCA"/>
</LinearLayout>